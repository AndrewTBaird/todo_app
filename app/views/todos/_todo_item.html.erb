<div class="todo_item">
  <div class="todo_item_content">
    <%= link_to(todo.title, todo_path(todo.id)) %>
  </div>

  <div class='todo_item_edit'>
    <%= link_to image_tag("done_icon.png"), todo_path(todo, todo: {completed: true}), method: :put %>
  </div>
  <div class="todo_item_actions">
    <%= link_to image_tag("edit_icon.png"), edit_todo_path(todo[:id]) %>
    <%= link_to image_tag("delete_icon.png"), todo, method: :delete, data: { confirm: "You sure?" }%>
  </div>

</div>
